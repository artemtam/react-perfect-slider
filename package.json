{
  "name": "react-perfect-slider",
  "version": "2.0.1",
  "description": "High-efficient and perfectly designed carousel/slider component.",
  "main": "dist/react-perfect-slider.umd.js",
  "module": "dist/react-perfect-slider.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement --external react ./src/index.tsx --output dist",
    "start": "microbundle --jsx React.createElement --external react ./src/index.tsx --output dist --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint \"src/**/*.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artemtam/react-perfect-slider.git"
  },
  "keywords": [
    "carousel",
    "slider",
    "react"
  ],
  "author": "Artem Tamoian <hello@artemtam.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artemtam/react-perfect-slider/issues"
  },
  "homepage": "https://github.com/artemtam/react-perfect-slider#readme",
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "4.0.13",
    "jsdom": "^27.2.0",
    "microbundle": "0.15.0",
    "oxlint": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "semantic-release": "19.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
