{
  "name": "react-perfect-slider",
  "version": "2.0.1",
  "description": "High-efficient and perfectly designed carousel/slider component.",
  "main": "dist/react-perfect-slider.umd.js",
  "module": "dist/react-perfect-slider.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement --external react ./src/index.tsx --output dist",
    "start": "microbundle --jsx React.createElement --external react ./src/index.tsx --output dist --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix \"src/**/*.{ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artemtam/react-perfect-slider.git"
  },
  "keywords": [
    "carousel",
    "slider",
    "react"
  ],
  "author": "Artem Tamoian <hello@artemtam.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artemtam/react-perfect-slider/issues"
  },
  "homepage": "https://github.com/artemtam/react-perfect-slider#readme",
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.0",
    "@types/node": "16.11.21",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "babel-eslint": "10.1.0",
    "eslint": "8.8.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-config-react-app": "7.0.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "jest": "27.4.7",
    "microbundle": "0.14.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
